@model Departement
@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>

    <form class="col-8" asp-action="Create">

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Code"></label>
            <input type="text" asp-for="Code" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>

    </form>
</div>